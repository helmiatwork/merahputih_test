<div class="card-body table-responsive p-0">
  <div class="card-header">
    <h3 class="card-title">Transactions</h3>
  </div>
  <div>
    <table class="table table-hover text-nowrap">
      <thead>
        <tr>
          <th>From Account</th>
          <th>To Account</th>
          <th>Code</th>
          <th>Amount</th>
          <th>Balance</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <%@transactions.each do |t|%>
          <tr>
            <td><%=t.account == "user"? User.find(t.scope).name : t.account%></td>
            <td><%=t.partner_account == "user"? User.find(t.partner_scope).name : t.partner_account%></td>
            <td><%=t.code%></td>
            <td><%=t.amount%></td>
            <td><%=t.balance%></td>
            <td><%=t.created_at.to_s%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
